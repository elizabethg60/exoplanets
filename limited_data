#first half
def read_half(filename):
    f = open(filename, 'r')
    f.readline()
    rv = np.loadtxt(f)[:, 1]
    return rv[0:len(rv)//2]
#every other - even
def read_everyother_e(filename):
    f = open(filename, 'r')
    f.readline()
    rv = np.loadtxt(f)[:, 1]
    everyother = []
    for i in range(0, len(rv)):
        if i % 2 == 0:
            everyother.append(rv[i])
    return everyother
#every other four
def read_every4(filename):
    f = open(filename, 'r')
    f.readline()
    rv = np.loadtxt(f)[:, 1]
    everyother = []
    for i in range(0, len(rv), 4):
        everyother.append(rv[i])
    return everyother
